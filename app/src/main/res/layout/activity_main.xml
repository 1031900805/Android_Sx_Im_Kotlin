<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android_sx_im_kotlin.ui.activity.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E4DA"
        />

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNaBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:itemIconTint="@drawable/selector_tab_bar"
            app:itemTextColor="@drawable/selector_tab_bar"
            app:menu="@menu/navigation">

    </android.support.design.widget.BottomNavigationView>

</LinearLayout>
